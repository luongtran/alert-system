<script type="text/javascript">
  $(document).ready(function() {
    $('.item').click(function() {
      var type = $(this).data('value');
      $.each($('#listitems').children('.item'), function() {
        $(this).removeClass('selected');
      });
      $(this).addClass('selected');
      $('#type').val(type);
      //$('#item-type-title').val(type);
      if (type === "file" || type === "image") {
        $('#item_file_type').show();
        $('#item_note_type').hide();
      } else {
        $('#item_file_type').hide();
        $('#item_note_type').show();
      }
    });
  });
</script>


<div class="ptl">
  <div id="chooseItemKind">
    <div id="listitems">
      <h2>Please Select Item Type</h2>
      <div class="item selected" data-value="text">
        <div class="item-inner text"><a href="#"><span class="title">Text Note</span></a></div>
      </div>
      <div class="item" data-value="file">
        <div class="item-inner zip"><a href="#"><span class="title">File (zip | other extension)</span></a></div>
      </div>
      <div class="item" data-value="image">
        <div class="item-inner image"><a href="#"><span class="title">Image</span></a></div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="spacing ptl"></div>
  <hr class="divider"/>

  <h2 id="item-type-title">Text Note</h2>
  <hr class="divider"/>
  <div id ="addttem">
    <%= form_for [@package,@item], :class => "create_new_item_frm", :enctype => "multipart/form-data" do |f| %>
      <%= hidden_field_tag :type, "text", :class=>"item_type_selected"%>
      <div class="control-group">
        <label class="control-label">Name</label>
        <div class="controls">
          <%= f.text_field :name, :class => "input-block-level" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Description</label>
        <div class="controls">
          <%= f.text_area :description, :class => "input-block-level", :rows => 3 %>
        </div>
      </div>
      <div class="control-group" id="item_note_type">
        <label class="control-label">Content</label>
        <div class="controls">
          <%= f.text_area :text_content, :class => "input-block-level", :rows => 5 %>
        </div>
      </div>
      <div class="control-group" id="item_file_type">
        <div class="controls">
          <%= f.file_field :file, :class => "btn btn-large btn-success" %>
          <!-- accept: 'image/png,image/gif,image/jpeg' -->
        </div>
      </div>
      <div class="control-group">
        <hr class="divider"/>
        <div class="spacing ptl"></div>
        <div class="row-fluid">
          <div class="span6 offset3">
            <button type="submit" class="btn btn-primary btn-block"><i class="icon-save mrm"></i>Create Item</button>
          </div>
        </div>
      </div>
    <%  end %> 
  </div>



</div>
