<div class="pageBody">
  <div class="container">
    <div class="whitebox wizard">
      <div class="row-fluid">
        <div>
          <h3> Package infor</h3>

          <p>
            <b>Name:  <%= @package.name %> </b>
          </p>

          <p>
            <b>Description:</b>
            <%= @package.description %>
          </p>

          <p>
            <b>Items: </b>
            <%= @package.items.count %>
          </p>
          <%= link_to 'Edit', edit_package_path(@package) %> |
          <%= link_to 'Back', packages_path %>
          <hr/>
        </div>
        <h3> Items</h3>
        <div id="items">
          <table>
            <tr>
              <th>Name _____</th>
              <th>Description_____</th>
              <th>Type</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            <% @items.each do |item| %>
                <tr>
                  <td><%= item.name %></td>
                  <td><%= item.description %></td>
                  <td><%= ItemType.find(item.item_type).name %></td>
                  <td><%= link_to 'Show  ', [@package, item] %></td>
                  <td><%= link_to 'Destroy  ', [@package, item], method: :delete, data: {confirm: 'Are you sure?'} %></td>
                </tr>
            <% end %>
          </table>
          <br/>
        </div>
        <%= button_tag 'Add Item', :class => "add_item_bt" %>
        <%= button_tag 'Cancel', :class => "cancel_add_item_bt" %>
        <hr/>


        <div class="frm_add_item" id="frmAddItem">
          <%= render "items/form" %>
        </div>
      </div>
    </div>
  </div>
</div>




