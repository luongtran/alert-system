<div class="pageBody">
  <div class="container">
    <div class="whitebox wizard">
      <div class="row-fluid">
        <h2>Sign in</h2>
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f| %>
            <%= f.input :email, :autofocus => true %>
            <%= f.input :password %>
            <label class="checkbox">
              <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>Remember me
            </label>
            <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

